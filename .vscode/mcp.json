{
	"inputs": [
		{
			"type": "promptString",
			"id": "github_mcp_pat",
			"description": "GitHub Personal Access Token",
			"password": true
		}
	],
	"servers": {
		"serena": {
			"command": "uvx",
			"args": [
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--project",
				"C:\\Users\\a8022\\Desktop\\2025",
				"--context",
				"desktop-app",
				"--mode",
				"interactive"
			]
		},
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
			"headers": {
				"Authorization": "Bearer ${input:github_mcp_pat}"
			}
		}
	}
}